{
    "configurations": [
        {
            "name": "Linux Kernel Cross-compile (RPi4)",
            "includePath": [
                "${workspaceFolder}/**",
                "/opt/yocto/ycoto-excersise/rpi-build-sysv/workspace/sources/linux-raspberrypi/include",
                "/opt/yocto/ycoto-excersise/rpi-build-sysv/workspace/sources/linux-raspberrypi/arch/arm64/include"
            ],
            "defines": [
                "__KERNEL__",
                "MODULE",
                "KBUILD_MODNAME=\"${fileBasenameNoExtension}\"",
                "__LINUX_ARM_ARCH__=8",
                "CONFIG_ARM64",
                "CONFIG_64BIT"
            ],
            "compilerPath": "/opt/yocto/poky/5.0.8/sysroots/cortexa72-poky-linux/usr/bin/aarch64-poky-linux-gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-arm64",
            "browse": {
                "limitSymbolsToIncludedHeaders": false,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db",
                "path": [
                    "${workspaceFolder}/**",
                    "/opt/yocto/ycoto-excersise/rpi-build-sysv/workspace/sources/linux-raspberrypi/include/**",
                    "/opt/yocto/ycoto-excersise/rpi-build-sysv/workspace/sources/linux-raspberrypi/arch/arm64/include/**"
                ]
            },
            "compilerArgs": [
                "-nostdinc",
                "-I${workspaceFolder}",
                "-I/opt/yocto/ycoto-excersise/rpi-build-sysv/workspace/sources/linux-raspberrypi/include",
                "-I/opt/yocto/ycoto-excersise/rpi-build-sysv/workspace/sources/linux-raspberrypi/arch/arm64/include"
            ]
        }
    ],
    "version": 4
}
